# ======= Stage 1: Build React app =======
FROM node:20-alpine AS build

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# ======= Stage 2: Serve static files =======
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html

# Expose port 5173 or 80
EXPOSE 5173
CMD ["nginx", "-g", "daemon off;"]
